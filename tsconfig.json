{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "strict": true,
        "removeComments": true,
        "allowJs": false,
        "checkJs": false,
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
