{
    "name": "webhook-api",
    "description": "A library that makes Discord webhook simpler for Minecraft: Bedrock Edition Vanilla software.",
    "version": "1.0.0",
    "private": false,
    "license": "Apache-2.0",
    "type": "module",
    "author": {
        "name": "m0lc14kk",
        "email": "olek@m0lc14kk.com",
        "url": "https://m0lc14kk.com"
    },
    "keywords": [
        "webhook-api",
        "discord webhooks",
        "minecraft discord"
    ],
    "main": "./src/Main.ts",
    "types": "./src/Main.ts",
    "scripts": {
        "build": "bunx tsup && bun run ./scripts/build-library.ts",
        "format": "bunx prettier --write .",
        "lint": "bunx eslint .",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{ts,json,jsonc,md}": [
            "bunx eslint --fix",
            "bunx prettier --write"
        ]
    },
    "engines": {
        "node": ">=1.0.0",
        "bun": ">=1.0.0"
    },
    "dependencies": {
        "@minecraft/server-net": "1.0.0-beta.11940b24"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@eslint/json": "^0.14.0",
        "@eslint/markdown": "^7.5.1",
        "@minecraft/server": "2.4.0",
        "@types/node": "^24.10.1",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "lint-staged": "^16.2.7",
        "path": "^0.12.7",
        "prettier": "^3.7.4",
        "process": "^0.11.10",
        "tsup": "^8.5.1",
        "typescript-eslint": "^8.49.0"
    }
}
